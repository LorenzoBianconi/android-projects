<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="90dp"
    tools:context="net.lorenzobianconi.irrigationcontroller.ICActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/textChannel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Relay Channel" />

    <LinearLayout
        android:id="@+id/phase1"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textChannel"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/p1StartTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start" />

        <EditText
            android:id="@+id/p1StartTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="time"
            android:textAlignment="center"
            tools:text="00:00" />

        <TextView
            android:id="@+id/p1StopTextView"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop" />

        <EditText
            android:id="@+id/p1StopTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:text="00:00"
            android:textAlignment="center"
            android:inputType="time" />

        <Switch
            android:id="@+id/p1Enable"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/phase2"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phase1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/p2StartTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start" />

        <EditText
